{
  "name": "stremio-letterboxd",
  "version": "1.0.0",
  "description": "Creates Stremio catalogs from Letterboxd URLs.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev:copy-static": "copyfiles \"static/*\" dist && mkdirp \"./static/lists\"",
    "prisma": "prisma",
    "prisma:push-db": "prisma db push",
    "dev": "tsc && npm run dev:copy-static && npm run prisma:push-db && node ./dist/index.js",
    "dev:all": "concurrently \"npx tsx src/index.ts\" \"npm run astro:dev\"",
    "start": "tsc && npm run dev:copy-static && npm run prisma:push-db && node ./dist/index.js",
    "start:all": "concurrently \"npm run start\" \"npm run astro:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx prisma generate && npm run astro:build && copyfiles -u 2 \"./web/dist/**/*\" \"./static\"",
    "astro:build": "cd ./web && npm run build",
    "astro:dev": "cd ./web && npx astro dev",
    "clean": "node clean.js"
  },
  "engines": {
    "node": ">= 20.x"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/stremio-addon-sdk": "^1.6.10",
    "del": "^7.1.0",
    "prisma": "^5.15.0",
    "tsx": "^4.19.1",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "@types/debug": "^4.1.12",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.0",
    "debug": "^4.3.5",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "lru-cache": "^10.2.2",
    "mkdirp": "^3.0.1",
    "supports-color": "^9.4.0"
  }
}
