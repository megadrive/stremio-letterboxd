// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cinemeta {
  id        String   @id
  info      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Config {
  id        String   @id @default(uuid())
  config    String // JSON
  metadata  String // String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([config])
}

model Film {
  id          String   @id
  title       String
  year        Int
  runtime     Int
  description String
  genres      String
  director    String
  cast        String
  imdb        String?
  tmdb        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
