{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [".syncpackrc.js", "eslint.config.mjs", "packages/**/*.ts"],
  "exclude": ["node_modules"],
  "display": "Recommended",
  "$schema": "https://json.schemastore.org/tsconfig"
}
